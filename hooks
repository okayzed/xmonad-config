#!/usr/bin/bash

if [[ $1 == "startup" ]]; then
  # Apps
  guake -g &
  workrave &

  # network manager
  killall nm-applet
  nm-applet &

  # lock screen
  gnome-screensaver &

  # docks
  xmobar &

  killall trayer

  # Add --monitor 1 or 0 to change where it appears
  trayer --edge top --align right --SetDockType true --SetPartialStrut true  --width 11 --transparent true --tint 0x000000 --height 24 &

  gnome-settings-daemon &
fi
